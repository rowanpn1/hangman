const express = require('express');
const bodyParser = require('body-parser');
const mongoose = require('mongoose');
const { words } = require('./db');
const Game = require('./game');

const app = express();

mongoose.connect('mongodb://localhost:27017/HangmanDB', {
  useNewUrlParser: true,
  useUnifiedTopology: true,
});

app.set('view engine', 'ejs');
app.use(bodyParser.urlencoded({ extended: true }));
app.use(express.static(__dirname + '/public'));

app.get('/', (req, res) => {
  res.render('index');
});

app.get('/play', async (req, res) => {
  const word = await words.aggregate([{ $sample: { size: 1 } }]).toArray();
  const game = new Game(word[0].word);
  res.render('play', { game });
});

app.post('/submit-word', async (req, res) => {
  const { word } = req.body;
  if (word) {
    await words.insertOne({ word });
  }
  res.redirect('/');
});

app.get('/instructions', (req, res) => {
  res.render('instructions');
});

app.get('/highscores', (req, res) => {
  res.render('highscores');
});

app.listen(3000, () => {
  console.log('Server started on port 3000');
});
